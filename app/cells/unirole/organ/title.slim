.page-header
  .row-fluid
    .pull-right
      h4= @organ.name
    a.btn-link href="#dialog" data-url="/unirole/users/new?organ_id=#{@organ.id}" data-toggle="modal" = t('controllers.unirole/users.actions.new')

#dialog.modal.hide.fade tabindex="-1" role="dialog"

javascript:
  $("a[href=#dialog]").click( function() {
    $("#dialog").load($(this).attr("data-url"));
  });
